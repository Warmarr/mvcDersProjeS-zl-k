@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>İçerik Giriş</h2>
<br />
@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">
       
        <input type="hidden" name="HeadingID" value="@ViewBag.id"/>
        @Html.Label("İçerik Yazın")
        @Html.TextAreaFor(x => x.ContentValue,20,30, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Ekle</button>
    </div>

}

